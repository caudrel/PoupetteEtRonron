{% extends 'base_admin.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    {% if app.user.id == user.id or is_granted('ROLE_SUPER_ADMIN') %}
        <h1>Utilisateur</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Prénom</th>
                <td>{{ user.firstname }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.lastname }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>

            {% if is_granted('ROLE_SUPER_ADMIN') %}
                <tr>
                    <th>Est Actif ?</th>
                    <td>{{ user.isActiv ? 'Yes' : 'No' }}</td>
                </tr>
                <tr>
                    <th>Est vérifié ?</th>
                    <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
                </tr>
                <tr>
                    <th>Créé le</th>
                    <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Modifié le</th>
                    <td>{{ user.updatedAt ? user.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Rôles</th>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                </tr>

            {% endif %}
            </tbody>
        </table>

        <div>
        {% if is_granted('ROLE_SUPER_ADMIN') %}
            <a href="{{ path('app_user_index') }}">Retour à la liste</a>
        {% endif %}
        </div>
        <div>
        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('app_user_edit', {'id': user.id}) }}">Modifier le profil</a>
        {% endif %}
        </div>
        <div>
        {% if is_granted('ROLE_SUPER_ADMIN') %}
            <a href="{{ path('app_user_edit_profile', {'id': user.id}) }}">Paramétrer ce profil</a>
        {% endif %}
        </div>

        {{ include('user/_delete_form.html.twig') }}

    {% endif %}
{% endblock %}
