{{ form_start(form) }}

<div class="col">
    <input
            name="{{ field_name(form.lastname) }}"
            type="text" class="form-control pr-admin-form-input"
            value="{{ user.lastname }}">
</div>

<div class="col">
    <input
            name="{{ field_name(form.firstname) }}"
            type="text" class="form-control pr-admin-form-input"
            value="{{ user.firstname }}">
</div>

<div class="col">
    <input
            name="{{ field_name(form.email) }}"
            type="text" class="form-control pr-admin-form-input"
            value="{{ user.email }}">
</div>

<button class="btn pr-button-slate">{{ button_label|default('Valider') }}</button>

{{ form_end(form) }}
