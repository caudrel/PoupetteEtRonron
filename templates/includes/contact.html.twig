{{ form_start(form, {'attr': {'class': 'd-flex flex-column align-items-center w-100'}}) }}

<div class="col pr-contact-input">
    <input
            name="{{ field_name(form.firstname) }}"
            type="text" class="form-control mb-3"
            placeholder="Prénom"
            required>
    <div class="pr-form-error">
        {{ form_errors(form.firstname) }}
    </div>
</div>

<div class="col pr-contact-input">
    <input
            name="{{ field_name(form.lastname) }}"
            type="text" class="form-control mb-3"
            placeholder="Nom">
    <div class="pr-form-error">
        {{ form_errors(form.lastname) }}
    </div>
</div>

<div class="col pr-contact-input">
    <input
            name="{{ field_name(form.email) }}"
            type="email" class="form-control mb-3"
            placeholder="VotreEmail@gmail.com"
            required>
    <div class="pr-form-error">
        {{ form_errors(form.email) }}
    </div>
</div>


<div class="col pr-contact-input">
    {{ form_widget(form.subject, {'label_attr': {'class': 'pr-contact-subject'}, 'placeholder': 'Sélectionnez un sujet'}) }}
</div>


<div class="col pr-contact-input">
    <textarea name="{{ field_name(form.message) }}" class="form-control" id="exampleFormControlTextarea1" rows="3"
              placeholder="Votre message (50 caractères minimum)" required></textarea>
    <div class="pr-form-error">
        {{ form_errors(form.message) }}
    </div>
</div>

<div class="d-flex justify-content-center">
    <button class="btn pr-button-slate mt-4" type="submit">Envoyer</button>
</div>
{{ form_end(form) }}