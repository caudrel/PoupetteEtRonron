{% extends 'base_admin.html.twig' %}

{% block title %}FAQ{% endblock %}

{% block body %}

    <div class="pr-admin-header">
        <h1 class="pr-color-orange mt-0 mb-5">FAQ</h1>
    </div>

    <div class="w-50 m-auto p-3 d-flex flex-column align-items-center">
        <h3 class="mt-0 mb-4">Liste des questions</h3>
    </div>

    <table class="table table-hover table-pr mt-3 pr-welcome">
        <thead>
        <tr class="align-top">
            <th scope="col">Question</th>
            <th scope="col">Réponse</th>
            <th scope="col">Est affichée ?</th>
            <th scope="col">Créée le</th>
            <th scope="col">Modifiée le</th>
            <th scope="col" class="text-center">Action</th>
        </tr>
        </thead>

        <tbody>
        {% for faq in faqs %}
            <tr>
                <td>{{ faq.question }}</td>
                <td>{{ faq.answer }}</td>
                <td>{{ faq.isActiv ? 'Oui' : 'Non' }}</td>
                <td>{{ faq.createdAt|date('Y-m-d') }}</td>
                <td>{{ faq.updatedAt|date('Y-m-d') }}</td>
                <td>
                    <a href="{{ path('app_faq_edit', {'id': faq.id}) }}" class="d-flex justify-content-center"><button class="pr-button-mini-ice">Modifier</button></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <button class="btn pr-button-slate"><a href="{{ path('app_faq_new') }}">Ajouter</a></button>

{% endblock %}
