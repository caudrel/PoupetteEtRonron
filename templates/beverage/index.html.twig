{% extends 'base_admin.html.twig' %}

{% block title %}Boissons{% endblock %}

{% block body %}

    <div class="pr-admin-header">
        <h1 class="pr-color-orange mt-0 mb-5">Les boissons</h1>
    </div>

    <div class="w-50 m-auto p-3 d-flex flex-column align-items-center">
        <h3 class="mt-0 mb-4">Liste des boissons</h3>
    </div>

    <table class="table table-hover table-pr mt-3 pr-welcome">
        <thead>
        <tr class="align-top">
            <th scope="col">Catégorie</th>
            <th scope="col">Boisson</th>
            <th scope="col">Description</th>
            <th scope="col">Prix</th>
            <th scope="col">Affiché ?</th>
            <th scope="col">Créé le</th>
            <th scope="col">Modifié le</th>
            <th scope="col" class="text-center">Action</th>
        </tr>
        </thead>

        <tbody>
        {% for beverage in beverages %}
            <tr>
                <td>{{ beverage.beverageCategory.beverageCategoryName }}</td>
                <td>{{ beverage.beverageName }}</td>
                <td>{{ beverage.description }}</td>
                <td>{{ beverage.price|number_format(2) }}</td>
                <td>{{ beverage.isActiv ? 'Oui' : 'Non' }}</td>
                <td>{{ beverage.createdAt|date('Y-m-d') }}</td>
                <td>{{ beverage.updatedAt|date('Y-m-d') }}</td>
                <td>
                    <a href="{{ path('app_beverage_edit', {'id': beverage.id}) }}"
                       class="d-flex justify-content-center">
                        <button class="pr-button-mini-ice">Modifier</button>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <button class="btn pr-button-slate"><a href="{{ path('app_beverage_new') }}">Ajouter</a></button>

{% endblock %}
