{% extends 'base_admin.html.twig' %}

{% block title %}Opening Hours{% endblock %}

{% block body %}

    <div class="pr-admin-header">
        <h1 class="pr-color-orange mt-0 mb-5">Horaires d'ouverture</h1>
    </div>

    <div class="w-50 m-auto p-3 d-flex flex-column align-items-center">
        <h3 class="mt-0 mb-4">Liste des jours</h3>
    </div>

    <div class="d-flex justify-content-center">
    <table class="table table-hover table-pr mt-3 w-75 pr-box">
        <thead>
        <tr class="align-top">
            <th scope="col">Jour</th>
            <th scope="col">Amplitude horaire</th>
            <th scope="col">Créée le</th>
            <th scope="col">Modifiée le</th>
            <th scope="col" class="text-center">Action</th>
        </tr>
        </thead>

        <tbody>
        {% for openingHour in openingHours %}
            <tr>
                <td>{{ openingHour.day }}</td>
                <td>{{ openingHour.description }}</td>
                <td>{{ openingHour.createdAt|date('Y-m-d') }}</td>
                <td>{{ openingHour.updatedAt|date('Y-m-d') }}</td>
                <td>
                    <a href="{{ path('app_hours_edit', {'id': openingHour.id}) }}" class="d-flex justify-content-center"><button class="pr-button-mini-ice">Modifier</button></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>

<div class="d-flex justify-content-center">
    <button class="btn pr-button-slate"><a href="{{ path('app_hours_new') }}">Ajouter</a></button>
</div>

{% endblock %}
