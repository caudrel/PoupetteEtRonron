{{ form_start(form) }}

<div class="col">
    <label class="">Jour</label>
    {{ form_widget(form.day, { 'attr': {'class': 'form-control pr-admin-form-input'} }) }}
    <div class="pr-form-error">
        {{ form_errors(form.day) }}
    </div>
</div>

<div class="col">
    <label class="">Amplitude horaire</label>
    {{ form_widget(form.description, { 'attr': {'class': 'form-control pr-admin-form-input'} }) }}
    <div class="pr-form-error">
        {{ form_errors(form.description) }}
    </div>
</div>

<div class="d-flex justify-content-center">
    <button class="btn pr-button-slate">{{ button_label|default('Valider') }}</button>
</div>
{{ form_end(form) }}