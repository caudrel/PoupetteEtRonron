
{{ form_start(form) }}


<div class="col">
    <label class="">Catégorie de plats</label>
    <input
            name="{{ field_name(form.foodCategoryName) }}"
            type="text" class="form-control pr-admin-form-input"
            value="{{ foodCategory.foodCategoryName }}" required>
    <div class="pr-form-error">
        {{ form_errors(form.foodCategoryName) }}
    </div>
</div>

<h5 class="mt-5 mb-3">Cette catégorie de plat doit-elle s'afficher en ce moment ?</h5>
<div class="d-flex justify-content-between">
    <div class="me-3">{{ form_widget(form.isActiv) }}</div>
    <div class="w-100 mb-5">{{ form_label(form.isActiv) }}</div>
</div>


<div class="d-flex justify-content-center">
    <button class="btn pr-button-slate">{{ button_label|default('Valider') }}</button>
</div>

{{ form_end(form) }}
